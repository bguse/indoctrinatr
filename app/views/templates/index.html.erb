<div class="row">
    <div class="large-12 columns">
        <h1>Listing templates</h1>
        <table class="wide">
            <thead>
              <tr>
                  <th>Name</th>
                  <th>Content</th>
                  <th >Actions</th>
              </tr>
            </thead>
            <tbody>
            <% @templates.each do |template| %>
              <tr>
                  <td><%= template.name %></td>
                  <td><%= template.content %></td>
                  <td>
                    <ul class="button-group">
                      <li><%= link_to 'Show', template, class: "button tiny" %></li>
                      <li><%= link_to 'Edit', edit_template_path(template), class: "button tiny" %></li>
                      <li><%= link_to 'Destroy', template, method: :delete, data: { confirm: 'Are you sure?' }, class: "button alert tiny" %></li>
                    </ul>
                  </td>

              </tr>
            <% end %>
            </tbody>
        </table>

        <br>

        <%= link_to 'New Template', new_template_path, class: "button success" %>

    </div>
</div>