<%= simple_form_for(@document_submission) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :template_id, as: :hidden %>
  </div>

  <%= f.fields_for :submitted_template_fields do |submitted_template_fields_form| %>
    <%= submitted_template_fields_form.input :template_field_id, as: :hidden %>
    <%= submitted_template_fields_form.input :value, label: submitted_template_fields_form.object.to_form_label %>
  <% end %>

  <div class="form-actions">
    <%= f.button :submit, class: "success button" %>
  </div>
<% end %>
